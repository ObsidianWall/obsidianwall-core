
// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
  "name": "ObsidianWall Core IaC Module Development",
  "build": {
    // You can use a specific image, but we'll build from a Dockerfile to install Python dependencies
    "dockerfile": "Dockerfile",
    "context": "."
  },

  "features": {
    // Install the Docker-in-Docker feature to enable running Docker commands inside the container
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "hashicorp.terraform",
        "redhat.vscode-yaml",
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  },

  // Post-create command to install all the tools and dependencies
  "postCreateCommand": "python3 .devcontainer/setup-dev-container.py",

  // Forward the necessary ports if you plan on running any local services
  "forwardPorts": [],

  "remoteUser": "vscode"
}



